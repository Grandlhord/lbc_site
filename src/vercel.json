{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=1024"
  },
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "staticFiles": {
    "include": ["assets/img/backgroundImages"],
    "exclude": ["**/unused/**"]
  }
}
